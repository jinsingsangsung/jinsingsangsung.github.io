---
import { getAllPublications } from "@/lib/notion/client";
import PublicationCard from "./PublicationCard.astro";

let publications = [];
try {
  publications = await getAllPublications();
} catch (error) {
  console.error("Error fetching publications:", error);
}
---

{publications.length > 0 && (
  <section class="publications-section max-w-[708px] sm:mr-20 print:max-w-full print:mr-auto mb-12">
    <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-6">
      Publications
    </h2>
    
    <div class="space-y-6">
      {publications.map((publication) => (
        <PublicationCard publication={publication} />
      ))}
    </div>
  </section>
)}

<style>
  .publications-section {
    margin-top: 2rem;
  }
</style>